<?xml version="1.0"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>ootb-webapp</id>

	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>

	<fileSets>
		<fileSet>
			<directory>src/main/resources</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>
	
	<dependencySets>
		<dependencySet>
			<unpack>true</unpack>
			<includes>
				<include>com.oracle:jre-win32:zip</include>
			</includes>
			<outputDirectory>java</outputDirectory>
			<fileMode>0644</fileMode>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>org.apache:tomcat:zip</include>
			</includes>
			<fileMode>0644</fileMode>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>tomcat/conf/tomcat-users.xml</exclude>
					<exclude>tomcat/webapps/**/*</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>eu.europa.ec.joinup.sd-dss:dss-demo-webapp:war</include>
			</includes>
			<outputDirectory>tomcat/webapps</outputDirectory>
			<!-- Works only if there is one include -->
			<outputFileNameMapping>ROOT.war</outputFileNameMapping>
		</dependencySet>
		<dependencySet>
			<includes>
				<include>lu.nowina.apps:nexu-app:jar</include>
			</includes>
			<outputDirectory></outputDirectory>
			<outputFileNameMapping>nexu.jar</outputFileNameMapping>
		</dependencySet>
	</dependencySets>
</assembly>
