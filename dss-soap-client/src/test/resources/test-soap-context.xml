<beans xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:jaxws="http://cxf.apache.org/jaxws"
	xsi:schemaLocation="
       	http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

	<jaxws:client id="soapClient" address="http://localhost:8080/dss-demo-webapp/services/soap/signature/one-document?wsdl" serviceClass="eu.europa.esig.dss.signature.SoapDocumentSignatureService">
		<jaxws:properties>
			<entry key="mtom-enabled" value="true" />
		</jaxws:properties>
	</jaxws:client>
	
	<jaxws:client id="soapMultiDocsClient" address="http://localhost:8080/dss-demo-webapp/services/soap/signature/multiple-documents?wsdl" serviceClass="eu.europa.esig.dss.signature.SoapMultipleDocumentsSignatureService">
		<jaxws:properties>
			<entry key="mtom-enabled" value="true" />
		</jaxws:properties>
	</jaxws:client>

</beans>