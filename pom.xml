								<!-- 									<file>${user.dir}/spotless/eclipse-fmt.xml</file> -->
								<!-- 								</eclipse> -->
								<removeUnusedImports />
							</java>
						</configuration>
						<executions>
							<execution>
								<id>spotless-check</id>
								<phase>compile</phase>
								<goals>
									<goal>apply</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
